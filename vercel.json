{
  "version": 2,
  "builds": [
    {
      "src": "shop1django/wsgi.py",  
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9",
        "maxLambdaSize": "15mb",
        "installCommand": "pip install -r requirements.txt",
        "includeFiles": [
          "shop1django/**",
          "staticfiles/**",
          "manage.py"
        ]
        
      }
    },
    {
      "src": "staticfiles/**",  
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "shop1django/wsgi.py"
    }
  ]
}